" we're not Solaris
set nocompatible

" be smart, not stupid
set shiftwidth=4
set tabstop=4
set expandtab
set autoindent
set smarttab

" syntax ftw
syntax on

" wrap at 80
set textwidth=80
set formatoptions=tcqr

" search as you go
set incsearch

" tell me where I am
set ruler

" multi-level undo is a must
set undolevels=1000
